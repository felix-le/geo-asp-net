@model IEnumerable<Todos.Models.Todo>

@{
    ViewData["Title"] = "All Of Todoes";
}

<h1>All Of Todoes</h1>

<p>
    <a asp-action="Create">Create A New Todo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoList)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TodoName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DaysTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TodoList.Name)
                </td>
                @if (User.Identity.IsAuthenticated)
                {

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
